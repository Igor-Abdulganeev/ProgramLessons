<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_item_card_movie">

    <TextView
        android:id="@+id/min"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="@string/movie_length"
        android:textAlignment="textStart"
        android:textColor="@color/marengo"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="137 MIN" />

    <TextView
        android:id="@+id/name_movie_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="textStart"
        android:textColor="@color/gainsborough"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@id/min"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Avengers: End Game" />

    <ImageView
        android:id="@+id/movie"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="2dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@id/name_movie_text_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/sample_movie" />

    <View
        android:id="@+id/mask_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="2dp"
        android:background="@drawable/bg_gradient_item_movie"
        app:layout_constraintBottom_toTopOf="@id/name_movie_text_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/star_icon_one"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="6dp"
        android:layout_marginBottom="10dp"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="@id/movie"
        app:layout_constraintEnd_toStartOf="@+id/star_icon_two"
        app:layout_constraintBottom_toBottomOf="@id/movie"
        tools:src="@drawable/ic_star_rate_red_16" />

    <ImageView
        android:id="@+id/star_icon_two"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="2dp"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toEndOf="@id/star_icon_one"
        app:layout_constraintEnd_toStartOf="@+id/star_icon_three"
        app:layout_constraintBottom_toBottomOf="@id/star_icon_one"
        tools:src="@drawable/ic_star_rate_red_16" />

    <ImageView
        android:id="@+id/star_icon_three"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="2dp"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toEndOf="@id/star_icon_two"
        app:layout_constraintEnd_toStartOf="@+id/star_icon_four"
        app:layout_constraintBottom_toBottomOf="@id/star_icon_one"
        tools:src="@drawable/ic_star_rate_red_16" />

    <ImageView
        android:id="@+id/star_icon_four"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="2dp"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toEndOf="@id/star_icon_three"
        app:layout_constraintEnd_toStartOf="@+id/star_icon_five"
        app:layout_constraintBottom_toBottomOf="@id/star_icon_one"
        tools:src="@drawable/ic_star_rate_red_16" />

    <ImageView
        android:id="@+id/star_icon_five"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="2dp"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toEndOf="@id/star_icon_four"
        app:layout_constraintBottom_toBottomOf="@id/star_icon_one"
        tools:src="@drawable/ic_star_rate_gray_16" />
    <TextView
        android:id="@+id/reviews_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        app:layout_constraintStart_toEndOf="@id/star_icon_five"
        app:layout_constraintEnd_toEndOf="@id/movie"
        app:layout_constraintBottom_toBottomOf="@id/star_icon_one"
        app:layout_constraintTop_toTopOf="@id/star_icon_one"
        android:text="@string/reviews_text"
        android:textColor="@color/pearl_blackberry"
        android:textSize="20sp"
        tools:text="125 REVIEWS"/>

    <TextView
        android:id="@+id/tag_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="14dp"
        android:textColor="@color/radical_red"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/star_icon_one"
        tools:text="Action, Adventure, Drama" />
    <View
        android:id="@+id/pg_view"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@drawable/bg_corners_32dp"
        android:layout_marginTop="32dp"
        android:layout_marginStart="6dp"
        app:layout_constraintTop_toTopOf="@id/movie"
        app:layout_constraintStart_toStartOf="@id/movie"/>

    <TextView
        android:id="@+id/pg_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/pg_view"
        app:layout_constraintBottom_toBottomOf="@id/pg_view"
        app:layout_constraintStart_toStartOf="@id/pg_view"
        app:layout_constraintEnd_toEndOf="@id/pg_view"
        android:textColor="@color/white"
        android:textSize="26sp"
        tools:text="13+" />
    <ImageView
        android:id="@+id/pg_favorite"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:scaleType="fitCenter"
        android:alpha="0.75"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="6dp"
        app:layout_constraintTop_toTopOf="@id/movie"
        app:layout_constraintEnd_toEndOf="@id/movie"
        tools:src="@drawable/ic_favorite_gray_24" />


</androidx.constraintlayout.widget.ConstraintLayout>