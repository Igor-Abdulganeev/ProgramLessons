<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <ImageView
        android:id="@+id/actor_one_image_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1:1"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="6dp"
        app:layout_constraintBottom_toTopOf="@id/actor_one_text_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/actor_two_image_view"
        tools:src="@drawable/actor1"
        android:src="@drawable/actor1"
        android:contentDescription="@string/contentdescription" />

    <TextView
        android:id="@+id/actor_one_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:textColor="@color/light_gray"
        android:layout_marginBottom="45dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/actor_one_image_view"
        app:layout_constraintStart_toStartOf="@+id/actor_one_image_view"
        android:text="Robert Downey Jr."
        tools:text="Robert Downey Jr." />

    <ImageView
        android:id="@+id/actor_two_image_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1:1"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="6dp"
        app:layout_constraintBottom_toTopOf="@id/actor_one_text_view"
        app:layout_constraintStart_toEndOf="@id/actor_one_image_view"
        app:layout_constraintEnd_toStartOf="@id/actor_three_image_view"
        tools:src="@drawable/actor2"
        android:src="@drawable/actor2"
        android:contentDescription="@string/contentdescription" />

    <TextView
        android:id="@+id/actor_two_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:textColor="@color/light_gray"
        app:layout_constraintBottom_toBottomOf="@+id/actor_one_text_view"
        app:layout_constraintEnd_toEndOf="@+id/actor_two_image_view"
        app:layout_constraintStart_toStartOf="@+id/actor_two_image_view"
        app:layout_constraintTop_toTopOf="@id/actor_one_text_view"
        app:layout_constraintVertical_bias="0.0"
        android:text="Chris Evans"
        tools:text="Chris Evans" />

    <ImageView
        android:id="@+id/actor_three_image_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1:1"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toTopOf="@id/actor_one_text_view"
        app:layout_constraintEnd_toStartOf="@id/actor_four_image_view"
        app:layout_constraintStart_toEndOf="@id/actor_two_image_view"
        tools:src="@drawable/actor3"
        android:src="@drawable/actor3"
        android:contentDescription="@string/contentdescription" />

    <TextView
        android:id="@+id/actor_three_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:textColor="@color/light_gray"
        app:layout_constraintBottom_toBottomOf="@+id/actor_one_text_view"
        app:layout_constraintEnd_toEndOf="@+id/actor_three_image_view"
        app:layout_constraintStart_toStartOf="@+id/actor_three_image_view"
        app:layout_constraintTop_toTopOf="@id/actor_one_text_view"
        app:layout_constraintVertical_bias="0.0"
        android:text="Mark Ruffalo"
        tools:text="Mark Ruffalo" />

    <ImageView
        android:id="@+id/actor_four_image_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1:1"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="6dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toTopOf="@id/actor_one_text_view"
        app:layout_constraintStart_toEndOf="@id/actor_three_image_view"
        app:layout_constraintEnd_toEndOf="parent"
        tools:src="@drawable/actor4"
        android:src="@drawable/actor4"
        android:contentDescription="@string/contentdescription" />

    <TextView
        android:id="@+id/actor_four_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:textColor="@color/light_gray"
        app:layout_constraintBottom_toBottomOf="@+id/actor_one_text_view"
        app:layout_constraintEnd_toEndOf="@+id/actor_four_image_view"
        app:layout_constraintStart_toStartOf="@+id/actor_four_image_view"
        app:layout_constraintTop_toTopOf="@id/actor_one_text_view"
        app:layout_constraintVertical_bias="0.0"
        android:text="Chris Hemsworth"
        tools:text="Chris Hemsworth" />

    <TextView
        android:id="@+id/head_cast_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:layout_marginStart="@dimen/margin_16"
        android:layout_marginBottom="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/actor_one_image_view"
        android:text="Cast"
        tools:text="Cast"/>
    <TextView
        android:id="@+id/all_actors_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_16"
        android:layout_marginBottom="8dp"
        android:textSize="12sp"
        android:textColor="@color/white"
        android:alpha="0.5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/actor_one_image_view"
        android:text="See All"
        tools:text="See All"/>

    <TextView
        android:id="@+id/description_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="5"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:alpha="0.75"
        android:layout_marginStart="@dimen/margin_16"
        android:layout_marginEnd="@dimen/margin_16"
        android:layout_marginBottom="24dp"
        android:lineSpacingExtra="4sp"
        android:gravity="center_vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/head_cast_text_view"
        android:text="After the devastating events of Avengers: Infinity War, the universe is in ruins. With the help of remaining allies, the Avengers assemble once more in order to reverse Thanos' actions and restore balance to the universe."
        tools:text="After the devastating events of Avengers: Infinity War, the universe is in ruins. With the help of remaining allies, the Avengers assemble once more in order to reverse Thanos' actions and restore balance to the universe." />

    <TextView
        android:id="@+id/head_description_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_16"
        android:layout_marginEnd="@dimen/margin_16"
        android:layout_marginBottom="4dp"
        android:textSize="14sp"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/description_text_view"
        android:text="Storyline"
        tools:text="Storyline" />

    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        style="?android:attr/ratingBarStyleSmall"
        android:theme="@style/MovieRatingBar"
        android:layout_marginStart="@dimen/margin_16"
        android:layout_marginBottom="28dp"
        app:layout_constraintBottom_toTopOf="@id/head_description_text_view"
        app:layout_constraintEnd_toStartOf="@+id/reviews_text_view"
        app:layout_constraintStart_toStartOf="parent"
        tools:rating="4" />

    <TextView
        android:id="@+id/reviews_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        app:layout_constraintStart_toEndOf="@id/ratingBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/ratingBar"
        app:layout_constraintTop_toTopOf="@id/ratingBar"
        android:text="@string/reviews_text"
        android:textColor="@color/pearl_blackberry"
        android:textSize="14sp"
        tools:text="125 REVIEWS"/>

    <TextView
        android:id="@+id/tag_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:textColor="@color/radical_red"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/ratingBar"
        android:text="Action, Adventure, Drama"
        tools:text="Action, Adventure, Drama" />
    <TextView
        android:id="@+id/name_movie_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="4dp"
        android:letterSpacing="-0.01"
        android:lineSpacingExtra="0sp"
        android:maxLines="2"
        android:gravity="center_vertical"
        android:textColor="@color/gainsborough"
        android:textSize="40sp"
        android:elevation="6dp"
        app:layout_constraintBottom_toTopOf="@id/tag_text_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Avengers: \nEnd Game"
        tools:text="Avengers: \nEnd Game" />

    <View
        android:id="@+id/mask_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:elevation="4dp"
        android:background="@drawable/bg_gradient_item_movie"
        app:layout_constraintBottom_toTopOf="@id/tag_text_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginBottom="40dp"
        android:elevation="2dp"
        android:scaleType="centerCrop"
        android:background="@drawable/bg_corners_32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tag_text_view"
        tools:src="@drawable/orig"
        android:src="@drawable/orig"
        android:contentDescription="@string/contentdescription" />

</androidx.constraintlayout.widget.ConstraintLayout>