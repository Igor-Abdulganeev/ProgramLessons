<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_corners_32dp">

        <Button
            android:id="@+id/back_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_16"
            android:layout_marginEnd="@dimen/margin_4"
            android:layout_marginBottom="@dimen/margin_16"
            android:background="@drawable/bg_button_grey_gradient"
            android:text="@string/text_back_button"
            android:textSize="@dimen/text_size_12"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/reservation_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/scroll_movie" />

        <Button
            android:id="@+id/reservation_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_4"
            android:layout_marginEnd="@dimen/margin_16"
            android:layout_marginBottom="@dimen/margin_16"
            android:background="@drawable/bg_button_red_gradient"
            android:text="@string/text_reservation_button"
            android:textSize="@dimen/text_size_12"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/back_button"
            app:layout_constraintTop_toTopOf="@id/back_button" />

        <ScrollView
            android:id="@+id/scroll_movie"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/margin_32"
            android:background="@drawable/background_corners_32dp"
            app:layout_constraintBottom_toTopOf="@id/back_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/scroll_constraint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/pic_actor_one"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginStart="@dimen/margin_16"
                    android:layout_marginBottom="@dimen/margin_6"
                    android:contentDescription="@string/contentdescription"
                    android:scaleType="centerCrop"
                    app:layout_constraintBottom_toTopOf="@id/text_actor_one"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintEnd_toStartOf="@id/pic_actor_two"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/head_cast"
                    app:srcCompat="@drawable/actor1"
                    tools:src="@drawable/actor1" />


                <TextView
                    android:id="@+id/text_actor_one"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_46"
                    android:maxLines="2"
                    android:text="@string/text_actor_one"
                    android:textColor="@color/text_gray_D8D8D8"
                    android:textSize="@dimen/text_size_12"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/pic_actor_one"
                    app:layout_constraintStart_toStartOf="@+id/pic_actor_one"
                    app:layout_constraintTop_toBottomOf="@id/pic_actor_one"
                    tools:text="@string/text_actor_one" />


                <ImageView
                    android:id="@+id/pic_actor_two"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginStart="@dimen/margin_8"
                    android:layout_marginBottom="@dimen/margin_4"
                    android:contentDescription="@string/contentdescription"
                    android:scaleType="centerCrop"
                    app:layout_constraintBottom_toTopOf="@id/text_actor_one"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintEnd_toStartOf="@id/pic_actor_three"
                    app:layout_constraintStart_toEndOf="@id/pic_actor_one"
                    app:layout_constraintTop_toTopOf="@id/pic_actor_one"
                    app:srcCompat="@drawable/actor2"
                    tools:src="@drawable/actor2" />

                <TextView
                    android:id="@+id/text_actor_two"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:text="@string/text_actor_two"
                    android:textColor="@color/text_gray_D8D8D8"
                    android:textSize="@dimen/text_size_12"
                    app:layout_constraintBottom_toBottomOf="@+id/text_actor_one"
                    app:layout_constraintEnd_toEndOf="@+id/pic_actor_two"
                    app:layout_constraintStart_toStartOf="@+id/pic_actor_two"
                    app:layout_constraintTop_toTopOf="@id/text_actor_one"
                    app:layout_constraintVertical_bias="0.0"
                    tools:text="@string/text_actor_two" />

                <ImageView
                    android:id="@+id/pic_actor_three"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginStart="@dimen/margin_8"
                    android:layout_marginBottom="@dimen/margin_6"
                    android:contentDescription="@string/contentdescription"
                    android:scaleType="centerCrop"
                    app:layout_constraintBottom_toTopOf="@id/text_actor_one"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintEnd_toStartOf="@id/pic_actor_four"
                    app:layout_constraintStart_toEndOf="@id/pic_actor_two"
                    app:layout_constraintTop_toTopOf="@id/pic_actor_one"
                    app:srcCompat="@drawable/actor3"
                    tools:src="@drawable/actor3" />

                <TextView
                    android:id="@+id/text_actor_three"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:text="@string/text_actor_three"
                    android:textColor="@color/text_gray_D8D8D8"
                    android:textSize="@dimen/text_size_12"
                    app:layout_constraintBottom_toBottomOf="@+id/text_actor_one"
                    app:layout_constraintEnd_toEndOf="@+id/pic_actor_three"
                    app:layout_constraintStart_toStartOf="@+id/pic_actor_three"
                    app:layout_constraintTop_toTopOf="@id/text_actor_one"
                    app:layout_constraintVertical_bias="0.0"
                    tools:text="@string/text_actor_three" />


                <ImageView
                    android:id="@+id/pic_actor_four"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginStart="@dimen/margin_8"
                    android:layout_marginEnd="@dimen/margin_16"
                    android:layout_marginBottom="@dimen/margin_4"
                    android:contentDescription="@string/contentdescription"
                    android:scaleType="centerCrop"
                    app:layout_constraintBottom_toTopOf="@id/text_actor_one"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/pic_actor_three"
                    app:layout_constraintTop_toTopOf="@id/pic_actor_one"
                    app:srcCompat="@drawable/actor4"
                    tools:src="@drawable/actor4" />

                <TextView
                    android:id="@+id/text_actor_four"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:text="@string/text_actor_four"
                    android:textColor="@color/text_gray_D8D8D8"
                    android:textSize="@dimen/text_size_12"
                    app:layout_constraintBottom_toBottomOf="@+id/text_actor_one"
                    app:layout_constraintEnd_toEndOf="@+id/pic_actor_four"
                    app:layout_constraintStart_toStartOf="@+id/pic_actor_four"
                    app:layout_constraintTop_toTopOf="@id/text_actor_one"
                    app:layout_constraintVertical_bias="0.0"
                    tools:text="@string/text_actor_four" />

                <TextView
                    android:id="@+id/head_cast"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_16"
                    android:layout_marginBottom="@dimen/margin_8"
                    android:text="@string/head_cast"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_14"
                    app:layout_constraintBottom_toTopOf="@id/pic_actor_one"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/text_description"
                    tools:text="@string/head_cast" />

                <TextView
                    android:id="@+id/all_actors"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/margin_16"
                    android:layout_marginBottom="@dimen/margin_8"
                    android:alpha="0.5"
                    android:text="@string/all_actors"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_12"
                    app:layout_constraintBottom_toTopOf="@id/pic_actor_one"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/head_cast"
                    tools:text="@string/all_actors" />
                <!--

                                                <ScrollView
                                                    android:id="@+id/scroll_text_description"
                                                    android:layout_width="0dp"
                                                    android:layout_height="wrap_content"
                                                    app:layout_constraintTop_toBottomOf="@id/head_description"
                                                    app:layout_constraintStart_toStartOf="parent"
                                                    app:layout_constraintEnd_toEndOf="parent"
                                                    app:layout_constraintBottom_toTopOf="@id/head_cast">

                                                </ScrollView>
                -->
                <TextView
                    android:id="@+id/text_description"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_16"
                    android:layout_marginEnd="@dimen/margin_16"
                    android:layout_marginBottom="@dimen/margin_24"
                    android:alpha="0.75"
                    android:gravity="center_vertical"
                    android:lineSpacingExtra="4sp"
                    android:maxLines="5"
                    android:text="@string/text_description"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_14"
                    app:layout_constraintBottom_toTopOf="@+id/head_cast"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/head_description"
                    tools:text="@string/text_description" />

                <TextView
                    android:id="@+id/head_description"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_16"
                    android:layout_marginEnd="@dimen/margin_16"
                    android:layout_marginBottom="@dimen/margin_4"
                    android:text="@string/head_description"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_14"
                    app:layout_constraintBottom_toTopOf="@id/text_description"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/rating_bar"
                    tools:text="@string/head_description" />

                <TextView
                    android:id="@+id/name_reviews"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_6"
                    android:text="@string/reviews_text"
                    android:textAllCaps="true"
                    android:textColor="@color/pixie_gray_two_text"
                    android:textSize="@dimen/text_size_14"
                    app:layout_constraintBottom_toBottomOf="@id/rating_bar"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/rating_bar"
                    app:layout_constraintTop_toTopOf="@id/rating_bar"
                    tools:text="125 REVIEWS" />

                <RatingBar
                    android:id="@+id/rating_bar"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_16"
                    android:layout_marginBottom="@dimen/margin_28"
                    android:numStars="5"
                    android:rating="4"
                    android:theme="@style/MovieRatingBar"
                    app:layout_constraintBottom_toTopOf="@id/head_description"
                    app:layout_constraintEnd_toStartOf="@+id/name_reviews"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tag"
                    tools:rating="4" />

                <TextView
                    android:id="@+id/tag"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_16"
                    android:layout_marginEnd="@dimen/margin_16"
                    android:layout_marginBottom="@dimen/margin_8"
                    android:text="@string/tag_text"
                    android:textColor="@color/pixie_red_text"
                    android:textSize="@dimen/text_size_14"
                    app:layout_constraintBottom_toTopOf="@+id/rating_bar"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/name_movie"
                    tools:text="@string/tag_text" />

                <TextView
                    android:id="@+id/name_movie"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_16"
                    android:layout_marginEnd="@dimen/margin_16"
                    android:layout_marginBottom="@dimen/margin_4"
                    android:elevation="6dp"
                    android:gravity="center_vertical"
                    android:letterSpacing="-0.01"
                    android:lineSpacingExtra="0sp"
                    android:maxLines="2"
                    android:text="@string/name_movie"
                    android:textColor="@color/pixie_white_text"
                    android:textSize="@dimen/text_size_40"
                    app:layout_constraintBottom_toTopOf="@id/tag"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/pg_rectangle"
                    tools:text="@string/name_movie" />

                <View
                    android:id="@+id/mask"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginBottom="@dimen/margin_40"
                    android:background="@drawable/background_gradient_item_movie"
                    android:elevation="4dp"
                    app:layout_constraintBottom_toTopOf="@id/tag"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/screen_movie"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginBottom="@dimen/margin_40"
                    android:background="@drawable/background_corners_32dp"
                    android:contentDescription="@string/contentdescription"
                    android:elevation="2dp"
                    android:scaleType="centerCrop"
                    app:layout_constraintBottom_toTopOf="@id/tag"
                    app:layout_constraintDimensionRatio="1.3:1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="1.0"
                    app:srcCompat="@drawable/orig"
                    tools:src="@drawable/orig" />

                <View
                    android:id="@+id/pg_rectangle"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:elevation="4dp"
                    android:layout_marginStart="@dimen/margin_16"
                    android:layout_marginTop="@dimen/margin_36"
                    android:layout_marginBottom="@dimen/margin_8"
                    android:background="@drawable/background_corners_32dp"
                    app:layout_constraintBottom_toTopOf="@id/name_movie"
                    app:layout_constraintStart_toStartOf="@id/screen_movie"
                    app:layout_constraintTop_toBottomOf="@id/button_play" />

                <TextView
                    android:id="@+id/pg_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:elevation="4dp"
                    android:text="@string/pg_text"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_12"
                    app:layout_constraintBottom_toBottomOf="@id/pg_rectangle"
                    app:layout_constraintEnd_toEndOf="@id/pg_rectangle"
                    app:layout_constraintStart_toStartOf="@id/pg_rectangle"
                    app:layout_constraintTop_toTopOf="@id/pg_rectangle"
                    tools:text="@string/pg_text" />


                <ImageView
                    android:id="@+id/button_play"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:alpha="0.75"
                    android:background="@drawable/bg_button_play"
                    android:contentDescription="@string/contentdescription"
                    android:elevation="6dp"
                    android:scaleType="center"
                    app:layout_constraintBottom_toBottomOf="@id/screen_movie"
                    app:layout_constraintEnd_toEndOf="@id/screen_movie"
                    app:layout_constraintStart_toStartOf="@id/screen_movie"
                    app:layout_constraintTop_toTopOf="@id/screen_movie"
                    app:srcCompat="@drawable/ic_baseline_play_arrow_24"
                    tools:src="@drawable/ic_baseline_play_arrow_24" />

                <ImageView
                    android:id="@+id/img_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_18"
                    android:layout_marginTop="@dimen/margin_60"
                    android:layout_marginBottom="@dimen/margin_42"
                    android:contentDescription="@string/contentdescription"
                    android:elevation="4dp"
                    app:layout_constraintBottom_toTopOf="@id/button_play"
                    app:layout_constraintStart_toStartOf="@id/screen_movie"
                    app:layout_constraintTop_toTopOf="@id/screen_movie"
                    app:srcCompat="@drawable/ic_navigate_before_12"
                    tools:src="@drawable/ic_navigate_before_12" />

                <TextView
                    android:id="@+id/text_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_8"
                    android:alpha="0.5"
                    android:elevation="4dp"
                    android:gravity="center_horizontal|center_vertical"
                    android:lineSpacingExtra="2sp"
                    android:text="@string/text_back"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_12"
                    app:layout_constraintBottom_toBottomOf="@id/img_back"
                    app:layout_constraintStart_toEndOf="@id/img_back"
                    app:layout_constraintTop_toTopOf="@id/img_back"
                    tools:text="@string/text_back" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_60"
                    android:layout_marginEnd="@dimen/margin_18"
                    android:layout_marginBottom="@dimen/margin_42"
                    android:contentDescription="@string/contentdescription"
                    android:elevation="4dp"
                    app:layout_constraintBottom_toTopOf="@id/button_play"
                    app:layout_constraintEnd_toEndOf="@id/screen_movie"
                    app:layout_constraintTop_toTopOf="@id/screen_movie"
                    app:srcCompat="@drawable/ic_favorite_red_24"
                    tools:src="@drawable/ic_favorite_red_24" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>